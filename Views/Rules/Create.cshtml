@model SpendingPilot.Domain.Entities.Rule
@{
    ViewData["Title"] = "New Rule";
    var categories = ViewBag.Categories as List<SpendingPilot.Domain.Entities.Category> ?? new();
}
<h2>New Rule</h2>
<form asp-action="Create" method="post" class="mt-3">
  <div class="mb-3">
    <label asp-for="Priority" class="form-label"></label>
    <input asp-for="Priority" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="PatternType" class="form-label"></label>
    <select asp-for="PatternType" class="form-select" asp-items="Html.GetEnumSelectList<SpendingPilot.Domain.Entities.RulePatternType>()"></select>
  </div>
  <div class="mb-3">
    <label asp-for="Pattern" class="form-label"></label>
    <input asp-for="Pattern" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="MinAmount" class="form-label"></label>
    <input asp-for="MinAmount" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="MaxAmount" class="form-label"></label>
    <input asp-for="MaxAmount" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="CategoryId" class="form-label">Category</label>
    <select asp-for="CategoryId" class="form-select">
      @foreach (var c in categories)
      {
        <option value="@c.Id">@c.Name (@c.Type)</option>
      }
    </select>
  </div>
  <div class="form-check mb-3">
    <input class="form-check-input" type="checkbox" asp-for="IsActive" />
    <label class="form-check-label" asp-for="IsActive"></label>
  </div>
  <button class="btn btn-primary" type="submit">Save</button>
  <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
