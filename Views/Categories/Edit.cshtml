@model SpendingPilot.Domain.Entities.Category
@{
    ViewData["Title"] = "Edit Category";
}
<h2>Edit Category</h2>
<form asp-action="Edit" method="post" class="mt-3">
  <input type="hidden" asp-for="Id" />
  <div class="mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label asp-for="Type" class="form-label"></label>
    <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<SpendingPilot.Domain.Entities.CategoryType>()"></select>
  </div>
  <button class="btn btn-primary" type="submit">Save</button>
  <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
</form>
