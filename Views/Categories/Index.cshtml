@model IEnumerable<SpendingPilot.Domain.Entities.Category>
@{
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">New Category</a>
</p>
<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.Type</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", new { id = c.Id })">Edit</a>
                <a class="btn btn-sm btn-outline-danger" href="@Url.Action("Delete", new { id = c.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
