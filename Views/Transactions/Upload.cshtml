@{
    ViewData["Title"] = "Upload Transactions";
}

<h2>Upload Transactions</h2>

<form asp-action="Upload" asp-controller="Transactions" method="post" enctype="multipart/form-data" class="mt-3">
    <div class="mb-3">
        <label for="file" class="form-label">CSV file</label>
        <input type="file" class="form-control" id="file" name="file" accept=".csv" required>
        <div class="form-text">Columns: Date, Description, Amount. Optional: Merchant, Account, Category.</div>
    </div>
    <div class="mb-3">
        <label for="accountName" class="form-label">Default Account Name (if not in CSV)</label>
        <input type="text" class="form-control" id="accountName" name="accountName" placeholder="Checking">
    </div>
    <button type="submit" class="btn btn-primary">Import</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
